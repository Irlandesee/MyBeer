<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".activities.ReportBeerActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/grey800"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edit_beer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="nome birra"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:textSize="32sp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spinner_beer_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/edit_beer_brewery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Nome birreria"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:textSize="32sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_beer_notes"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:ellipsize="end"
                android:hint="Note"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:textSize="13sp"
                android:textStyle="normal" />
            <ImageView
                android:id="@+id/iv_beer_picture"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:contentDescription="beer photo"/>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fam_report_beer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:backgroundTint="@color/purple"
            android:contentDescription="takes a photo"
            android:src="@drawable/baseline_menu_24"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>